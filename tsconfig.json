{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "outDir": "./dist-electron",
    "rootDir": "./main",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node"],
    "composite": true,
  },
  "include": [
    "main/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "renderer"
  ],
}